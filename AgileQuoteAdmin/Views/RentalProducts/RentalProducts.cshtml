    <!DOCTYPE html>
<html dir="ltr" lang="en">
<head>     
    <title>Agile Quote</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="Shortcut Icon" type="image/ico" href=""/>
    <link rel="stylesheet" type="text/css" href="../../Content/reset.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/grid.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/icons.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/style.css" />
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>   
    <script src="../../Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="../../Scripts/RentalProduct/RentalProducts.js" type="text/javascript"></script>
</head>

<body>
<section class="c12 main-title">
           		<div class="c6 quote">
                	<img src="../../Images/qoute-ion.png" alt="img1" />
                	<p>RentalProduct Form</p>
                    
                     
                </div>
            </section>
            <section>
           @using (Html.BeginForm("RentalProducts", "RentalProducts", FormMethod.Post, new { enctype = "multipart/form-data" }))
              {
            	<div class="greay_box">
                	<ul>
                    	<li>
                        	@Html.LabelFor(x => x.RentalProductsName, new { @name = "RentalProductsName" , @class = "Label" })
                            @Html.TextBoxFor(x => x.RentalProductsName)
                            @Html.ValidationMessageFor(x=>x.RentalProductsName)
                        </li>
                        <li>
                        	@Html.LabelFor(x => x.Description)
                            @Html.TextBoxFor(x => x.Description)
                             @Html.ValidationMessageFor(x => x.Description)
                        </li>
						<li>
                        	 @Html.LabelFor(x => x.Warrenty)
                             @Html.TextBoxFor(x => x.Warrenty)   
                             @Html.ValidationMessageFor(x => x.Warrenty)  
                        </li>                                                     
                        <li>
                        	 @Html.LabelFor(x => x.UnitPrice)
                             @Html.TextBoxFor(x => x.UnitPrice)
                             @Html.ValidationMessageFor(x=>x.UnitPrice)
                        </li>
						<li>
                            @Html.LabelFor(x => x.Discount)
                            @Html.TextBoxFor(x => x.Discount, new { @name = "mMaterialName", @class = "TextBox" })
                            @Html.ValidationMessageFor(x=>x.Discount)
                        </li>
                        <li>
                              <label>Image</label>
                        	 <input type="file" name="image" />
                        </li>                         
                        </ul>
                        </div>          
                        
                    
                 <div class="submit_box">
            	<input type="submit" value="Create Rental Product" />
                </div>               
                }
            </div>
            </section>
           
               
</body>
</html>
