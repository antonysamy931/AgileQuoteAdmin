            <section>
           @using (Html.BeginForm("EditRentalProducts", "RentalProducts", FormMethod.Post, new { enctype = "multipart/form-data" })) 
              {
            	<div class="greay_box">
                	<ul>
                    	<li>
                        	 @Html.LabelFor(x => x.RentalProductsID)
