                        </li>
                        <li>
                            @Html.LabelFor(x => x.Discount)
                            @Html.TextBoxFor(x => x.Discount)
                            @Html.ValidationMessageFor(x=>x.Discount)
                        </li>
                        <li>
                           @Html.LabelFor(x => x.IsActive)
                           @Html.CheckBoxFor(x => x.IsActive)
                        </li>
                        <li>
                            @Html.LabelFor(x => x.IsDelete)
